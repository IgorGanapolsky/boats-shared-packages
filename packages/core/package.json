{
  "name": "@boats/core",
  "version": "0.1.0",
  "description": "Core business logic and utilities for Boats.com applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --external '@boats/types'",
    "build:dts": "tsup src/index.ts --format esm,cjs --dts --ignore-watch node_modules --external '@boats/types'",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "dependencies": {
    "@boats/types": "^0.1.0",
    "openai": "^4.11.1"
  },
  "peerDependencies": {
    "@tensorflow/tfjs": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@tensorflow/tfjs": "^4.10.0",
    "@tensorflow-models/mobilenet": "^2.1.1",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "openai": "^4.11.1",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
