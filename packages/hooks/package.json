    "clean": "rm -rf dist",
    "test": "jest"
  },
  "dependencies": {
    "@boats/core": "^0.1.0",
    "@boats/types": "^0.1.0",
    "@tanstack/react-query": "^5.8.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.37",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
