{
  "name": "@igorganapolsky/boats-types",
  "version": "0.1.0",
  "description": "Shared TypeScript types for the Boats.com ecosystem",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
